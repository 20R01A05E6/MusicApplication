@model Melody.Models.HomeViewModel
@{
    ViewData["Title"] = "Account";
}
<style>
    .right-content {
        background-color: black;
        padding: 20px;
        color: white;
    }

    .profile-section {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 20px;
        gap:15px;
    }

    .profile-pic {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background-color: #555;
    }

    .profile-name {
        margin-top: 10px;
        font-size: 24px;
        color: white;
    }

    .section {
        margin-bottom: 20px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

        .section-header h3 {
            font-size: 20px;
        }

    .see-more {
        font-size: 14px;
        color: #ccc;
        text-decoration: none;
    }

        .see-more:hover {
            color: greenyellow;
        }

    /* Following section circles */
    .following-list {
        display: flex;
        gap: 10px;
    }

    .circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid #5fd068;
    }

        .circle img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Playlist section */
    .playlist-section{
        display:flex;
        flex-direction:column;
        width:auto;
        height:auto;
    }
    .section-header{
        display:flex;
        flex-direction:row;
        justify-content:space-between;
    }
    .playlist-list{
        display:flex;
        flex-direction:row;
        width:auto;
        height:auto;
    }
    .Playlist-item{
        width: 120px;
        border-radius: 25px;
        height: 120px;
        background-color: black;
        margin: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .image-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        height: 100px;
    }

    .image {
        width: 100px;
        height: 100px;
        border-radius: 25px;
        object-fit: cover;
        border: 2px solid #5fd068;
    }
    .Playlist-name{
        position: absolute;
        bottom: -20px; /* Position below the artist image */
        text-align: center;
        font-size: 14px;
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none; /* Prevent interaction with the name */
    }
    .Playlist-item:hover .Playlist-name{
        opacity: 1;
    }
    .see-more button{
        background-color:black;
        color:white;
        text-decoration:none;
    }
</style>
<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <div class="right-content">
    <!-- Profile Section -->
    <div class="profile-section">
        <img src="~/images/user_logo.jpg" alt="Profile Picture" class="profile-pic">
        <h2 class="profile-name">Purandhar</h2>
    </div>

    <!-- Following Section -->
    <div class="section following-section">
        <div class="section-header">
            <h3>Following</h3>
            <a href="#" class="see-more">See More...</a>
        </div>
        <div class="following-list">
            <div class="circle"><img src="path-to-image.jpg" alt="Artist 1"></div>
            <div class="circle"><img src="path-to-image2.jpg" alt="Artist 2"></div>
            <div class="circle"><img src="path-to-image3.jpg" alt="Artist 3"></div>
            <div class="circle"><img src="path-to-image4.jpg" alt="Artist 4"></div>
            <div class="circle"><img src="path-to-image5.jpg" alt="Artist 5"></div>
            <!-- Add more circles as needed -->
        </div>
    </div>

    <!-- Playlists Section -->
    <div class="playlist-section">
        <div class="section-header">
            <h3>Playlists</h3>
                    <div class="see-more">
                        <form>
                            <button asp-controller="Playlists" asp-action="Index" type="submit" class="see-more-button">See more...</button>
                        </form>
                    </div>
        </div>
        <div class="playlist-list">
                    @foreach(var playlist in Model.Playlists.Take(9))
                    {
                        <div class="Playlist-item">
                            <a href="@Url.Action("Playlist", "Playlists", new { id = playlist.PlaylistId })">
                                <div class="image-container">
                                    <img src="~/images/DeviSriPrasad.jpg" class="image" alt="@playlist.Name" />
                                </div>
                            </a>
                            <div class="Playlist-name">@playlist.Name</div>
                        </div>
                    }
        </div>
    </div>
</div>

    </div>
</div>
