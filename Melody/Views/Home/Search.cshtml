@{
    ViewData["Title"] = "Search";
}
<style>
    .Search-list{
        width:auto;
        height:auto;
        background-color:#333;
    }
</style>
<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <div class="Search-list">
            @if (Model.Albums.Any() || Model.Artists.Any() || Model.Songs.Any())
            {
                <h3>Albums</h3>
                <ul>
                    @foreach (var album in Model)
                    {
                        <div class="Album-list">
                            <div class="Album-container">
                                <a href="@Url.Action("Album", "Albums", new { id = album.AlbumId })">
                                    <img src="~/images/@album.ImagePath" class="Album-image" alt="@album.Title" />
                                </a>
                                <div class="Album-title">@album.Title</div>
                            </div>
                        </div>
                    }
                </ul>

                <h3>Artists</h3>
                <ul>
                    @foreach (var artist in Model.Artists)
                    {
                        <li>
                            <a href="@Url.Action("Artist", "Artists", new { id = artist.ArtistId })">@artist.Name</a>
                        </li>
                    }
                </ul>

                <h3>Songs</h3>
                <ul>
                    @foreach (var song in Model.Songs)
                    {
                        <li>
                            <a href="@Url.Action("Song", "Songs", new { id = song.SongId })">@song.Title</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No results found for your search.</p>
            }
        </div>
    </div>
</div>

