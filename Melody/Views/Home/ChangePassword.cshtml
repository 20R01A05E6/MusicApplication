@{
    ViewData["Title"] = "ChangePassword";
}
<style>
    .change-password{
        width:auto;
        height:auto;
        background-color:#333;
        padding:15px;
        border-radius:25px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
    }

    .form-input{
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #555;
        background-color: #444;
        color: white;
        width:30%;
    }

    .update-button {
        background-color: #1db954;
        cursor: pointer;
        width:fit-content;
        height:fit-content;
        color:white;
    }

        .update-button:hover {
            background-color: #1a9e4a;
        }
</style>
<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <div class="change-password">
            <h2>Chnage Password</h2>
            <form asp-action="ChangePassword" method="post">
                <div class="form-group">
                    <label class="form-label" for="oldPassword">Old Password</label>
                    <input class="form-input" type="password" id="oldPassword" name="OldPassword" required />
                    @if (ViewBag.OldPasswordError != null)
                    {
                        <span class="validation-error" style="color:red">@ViewBag.OldPasswordError</span>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label" for="newPassword">New Password</label>
                    <input class="form-input" type="password" id="newPassword" name="NewPassword" required />
                </div>

                <div class="form-group">
                    <label class="form-label" for="confirmPassword">Confirm Password</label>
                    <input class="form-input" type="password" id="confirmPassword" name="ConfirmPassword" required />
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <span class="validation-error" style="color:red">@ViewBag.ErrorMessage</span>
                    }
                </div>

                <button type="submit" class="update-button">Update Password</button>
            </form>
        </div>
    </div>
</div>

