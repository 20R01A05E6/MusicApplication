@{
    ViewData["Title"] = "Account";
}
<style>
    .right-content {
        background-color: black;
        padding: 20px;
        color: white;
    }

    .profile-section {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 20px;
        gap:15px;
    }

    .profile-pic {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background-color: #555;
    }

    .profile-name {
        margin-top: 10px;
        font-size: 24px;
        color: white;
    }

    .section {
        margin-bottom: 20px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

        .section-header h3 {
            font-size: 20px;
        }

    .see-more {
        font-size: 14px;
        color: #ccc;
        text-decoration: none;
    }

        .see-more:hover {
            color: greenyellow;
        }

    /* Following section circles */
    .following-list {
        display: flex;
        gap: 10px;
    }

    .circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid #5fd068;
    }

        .circle img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Playlist section */
    .playlist-list {
        display: flex;
        gap: 10px;
    }

    .playlist-item {
        width: 100px;
        height: 100px;
        border-radius: 10px;
        overflow: hidden;
        border: 2px solid #5fd068;
    }

        .playlist-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

</style>
<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <div class="right-content">
    <!-- Profile Section -->
    <div class="profile-section">
        <img src="~/images/user_logo.jpg" alt="Profile Picture" class="profile-pic">
        <h2 class="profile-name">Purandhar</h2>
    </div>

    <!-- Following Section -->
    <div class="section following-section">
        <div class="section-header">
            <h3>Following</h3>
            <a href="#" class="see-more">See More...</a>
        </div>
        <div class="following-list">
            <div class="circle"><img src="path-to-image.jpg" alt="Artist 1"></div>
            <div class="circle"><img src="path-to-image2.jpg" alt="Artist 2"></div>
            <div class="circle"><img src="path-to-image3.jpg" alt="Artist 3"></div>
            <div class="circle"><img src="path-to-image4.jpg" alt="Artist 4"></div>
            <div class="circle"><img src="path-to-image5.jpg" alt="Artist 5"></div>
            <!-- Add more circles as needed -->
        </div>
    </div>

    <!-- Playlists Section -->
    <div class="section playlist-section">
        <div class="section-header">
            <h3>Playlists</h3>
            <a href="#" class="see-more">See More...</a>
        </div>
        <div class="playlist-list">
            <div class="playlist-item"><img src="path-to-playlist1.jpg" alt="Playlist 1"></div>
            <div class="playlist-item"><img src="path-to-playlist2.jpg" alt="Playlist 2"></div>
            <div class="playlist-item"><img src="path-to-playlist3.jpg" alt="Playlist 3"></div>
            <div class="playlist-item"><img src="path-to-playlist4.jpg" alt="Playlist 4"></div>
            <!-- Add more playlist items as needed -->
        </div>
    </div>
</div>

    </div>
</div>
