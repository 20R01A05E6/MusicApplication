@{
    ViewData["Title"] = "Subscription";
}
<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        margin: 5px;
    }

    .logo {
        border-radius: 25px;
    }

    .company-logo {
        object-fit: cover;
        border-radius: 25px;
        width: 170px;
        height: 90px;
    }

    .body {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 50px;
        margin: 60px;
        align-items: center;
    }

    .cost {
        background-color: #70ffef;
        color: white;
        border-top-left-radius: 25px;
        border-bottom-right-radius: 25px;
        width: 250px;
        height: 10%;
    }

    .gold-cost {
        background-color: #FFD700;
        color: white;
        border-top-left-radius: 25px;
        border-bottom-right-radius: 25px;
        width: 250px;
        height: 10%;
    }

    .silver-cost {
        background-color: #C0C0C0;
        color: white;
        border-top-left-radius: 25px;
        border-bottom-right-radius: 25px;
        width: 250px;
        height: 10%;
    }

    .bronze-cost {
        background-color: #CD7F32;
        color: white;
        border-top-left-radius: 25px;
        border-bottom-right-radius: 25px;
        width: 250px;
        height: 10%;
    }

        .bronze-cost h2,
        .silver-cost h2,
        .gold-cost h2,
        .cost h2 {
            margin-top: 0px;
            color: black;
            padding: 5px;
        }

    .subscription-card {
        width: 300px;
        height: 500px;
        background-color: #828282;
        border-radius: 25px;
    }

    .subscription-type {
        display: flex;
        align-items: center;
        justify-content: center;
        color: black;
    }

    .divider {
        display: flex;
        justify-content: center;
    }

    .divider-line {
        border: 1px solid black;
        margin: 0;
        width: 80%;
    }

    .anchor {
        text-decoration: none;
    }

    .features {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<div class="container">
