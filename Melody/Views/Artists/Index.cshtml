@model IEnumerable<Melody.Models.Artist>
@{
    ViewData["Title"] = "Index";
}
<style>
    .container .div-right .Artist {
        display: flex;
        flex-wrap: wrap;
        background-color: #333;
        border-radius: 25px;
        height: auto;
        width: 100%; /* Full width */
        gap: 7px;
    }

    .Artist-list {
        width: 120px;
        border-radius: 25px;
        height: auto;
        background-color: black;
        margin: 7px;
    }

    .Artist-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 10px;
        position: relative; /* Needed for hover title positioning */
    }

    .Artist-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover; /* Ensure the image fits the circle properly */
        border: 2px solid #5fd068;
    }

    /* Hidden artist name that appears on hover */
    .Artist-name {
        position: absolute;
        bottom: -20px; /* Position below the artist image */
        text-align: center;
        font-size: 14px;
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none; /* Prevent interaction with the name */
    }

    .Artist-container:hover .Artist-name {
        opacity: 1;
    }

    .div-right h3 {
        width: 100px;
        margin: 5px;
        margin-left: 15px;
        padding: 0;
    }
</style>

<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <h3>Artists</h3>
        <div class="Artist">
            @foreach (var artist in Model)
            {
                <div class="Artist-list">
                    <div class="Artist-container">
                        <a href="@Url.Action("Artist", "Artists", new { id = artist.ArtistId })">
                            <img src="~/images/@artist.ImagePath" class="Artist-image" alt="@artist.Name" />
                        </a>
                        <div class="Artist-name">@artist.Name</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
