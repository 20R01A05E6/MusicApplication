@model IEnumerable<Melody.Models.Artist>
@{
    ViewData["Title"] = "Index";
}
<style>
    .container .div-right .Artist {
        display:flex;
        flex-wrap:wrap;
        background-color: #333;
        border-radius: 25px;
        height: auto;
        width: 100%; /* Full width */
        gap:7px;
    }
    .Artist-list{
        width: 120px;
        border-radius: 25px;
        height: auto;
        background-color: black;
        margin: 7px;
    }
    .Artist-container{
        display: flex;
        align-items: center;
        justify-content: center;
        padding:10px;
    }
    .Artist-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover; /* Ensure the image fits the circle properly */
        border: 2px solid #5fd068;
    }
    .div-right h3{
        width: 100px;
        margin: 5px;
        margin-left: 15px;
        padding: 0;
    }
</style>
<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <h3>Artists</h3>
        <div class="Artist">
            @foreach (var artist in Model)
            {
                <div class="Artist-list">
                    <div class="Artist-container">
                        <a href="@Url.Action("Artist", "Artists", new { id = artist.ArtistId })">
                            <img src="~/images/@artist.ImagePath" class="Artist-image" alt="@artist.Name" />
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
