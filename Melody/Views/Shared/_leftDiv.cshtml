<style>
    /* Flex container for Your Library section */
    .l2 {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        padding: 10px; /* Add padding for better spacing */
    }

        .l2 h2 {
            margin-top: 0;
            margin-bottom: 0;
        }

    .divider {
        border: 1px solid white;
        margin: 0;
        width: 100%;
    }

    .playlist-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 25px;
        background-color: black;
        color: white;
        padding: 15px; /* Added padding */
        width: 100%; /* Take full width */
        box-sizing: border-box; /* Ensure padding doesn't overflow */
    }

        /* Button style with border-radius */
        .playlist-container button {
            background-color: #1db954; /* Spotify-like green */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 25px; /* Border-radius added */
            cursor: pointer;
            transition: background-color 0.3s ease; /* Transition for hover effect */
        }

            .playlist-container button:hover {
                background-color: #17a247; /* Slightly darker on hover */
            }

    /* Make the home section responsive */
    .home {
        text-align: center;
    }

    .home-logo img {
        width: 50px; /* Set a max width for responsive design */
        height: auto;
    }

    /* Responsive Design */
    @@media screen and (max-width: 768px) {
        .div-left {
            width: 100%;
            padding: 10px; /* Adjust padding */
        }

        .l2 {
            width: 100%;
            padding: 10px;
        }

        .playlist-container {
            width: 90%; /* Adjust width for smaller screens */
            margin: 0 auto;
        }

        .company-logo img {
            width: 50px; /* Make the logo responsive */
            height: auto;
        }

        .home-logo img {
            width: 40px; /* Smaller logo for mobile view */
            height: auto;
        }

        h2 {
            font-size: 1.5em;
        }

        .playlist-container button {
            padding: 8px 15px; /* Adjust padding for smaller buttons */
        }
    }

    @@media screen and (max-width: 480px) {
        .l2 h2 {
            font-size: 1.2em; /* Smaller font size for mobile */
        }

        .playlist-container {
            padding-top: 0px;
        }

            .playlist-container button {
                padding: 6px 12px; /* Further reduced padding for very small screens */
            }
    }

    .language {
        width: auto;
        height: auto;
        display: flex;
        gap: 2px;
        justify-content: center;
        align-items: center;
    }

    .lan-button {
        border-radius: 25px;
        background-color: black;
        color: white;
        display: flex;
        flex-direction: row;
    }

    .lan-image {
        margin: 2px;
        width: 25px;
        height: 25px;
    }

    .lan-logo {
        object-fit: cover;
        border-radius: 50%;
        height: 25px;
    }

    /* Modal Styles */
    .create-playlist {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgba(0, 0, 0, 0.5); /* Black w/ opacity */
        backdrop-filter: blur(5px); /* Blur effect */
        display:flex;
        flex-direction:column;
        gap:15px;
    }

    .content {
        background-color: black;
        color: white;
        margin: 15% auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid white;
        border-radius: 25px;
        width: 40%; /* Could be more or less, depending on screen size */
    }
    .create-playlist-heading{
        display:flex;
        justify-content:space-between;
    }
        .content h2 {
            margin-top: 0;
            justify-content:center;
        }

        .content input {
            width: 30%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
        }
        .form-group{
            display:flex;
            flex-direction:row;
            gap:5px;
            width:auto;
        }
        .content button {
            background-color: #1db954; /* Spotify-like green */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .content button:hover {
                background-color: #17a247; /* Slightly darker on hover */
            }
            .close{
                display:flex;
                justify-content:center;
            }

</style>

<div class="div-left">
    <div class="l1">
        <div class="company-logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="logo" class="logo" />
            </a>
        </div>
        <div class="home">
            <div class="home-logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/homelogo.png" alt="logo" class="home-logo-image" />
                </a>
            </div>
            <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                <h2 style="margin-top:25px;margin-bottom:0px;color:white;">
                    HOME
                </h2>
            </a>
        </div>
    </div>
    <div class="l2">
        <h2>Your library</h2>
        <hr class="divider">
        <div class="playlist-container">
            <h4 style="margin-top:0px;">Create your playlist</h4>
            <button id="openCreateModal">Create Playlist</button>
        </div>
        <div class="language">
            <button class="lan-button">
                <div class="lan-image">
                    <img src="~/images/language.png" class="lan-logo" />
                </div>
                <h2>English</h2>
            </button>
        </div>
    </div>
</div>
<div class="create-playlist" id="create-playlist">
    <div class="content">
        <div class="create-playlist-heading">
            <h2>Create Playlist</h2>
            <span>&times;</span>
        </div>
        <form method="post" asp-action="Create" asp-controller="Playlists">
            <div class="form-group">
                <input type="text" id="playlistName" name="playlistName" required />
                <button type="submit">Create</button>
            </div>
        </form>
        <button id="close-create-playlist" class="close">Close</button>
    </div>
</div>

<script>
    // Get the modal and buttons
    const openModalButton = document.getElementById("openCreateModal");
    const modal = document.getElementById("create-playlist");
    const closeModalButton = document.getElementById("close-create-playlist");

    // Function to open the modal
    openModalButton.addEventListener("click", () => {
        modal.style.display = "block";
    });

    // Function to close the modal
    closeModalButton.addEventListener("click", () => {
        modal.style.display = "none";
    });

    // Close the modal when clicking outside of it
    window.addEventListener("click", (event) => {
        if (event.target === modal) {
            modal.style.display = "none";
        }
    });

    // Optional: Close the modal when the 'Esc' key is pressed
    window.addEventListener("keydown", (event) => {
        if (event.key === "Escape") {
            modal.style.display = "none";
        }
    });
</script>

