<style>
    /* Flex container for Your Library section */
    .l2 {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        padding: 10px; /* Add padding for better spacing */
    }

        .l2 h2 {
            margin-top: 0;
            margin-bottom: 0;
        }

    .divider {
        border: 1px solid white;
        margin: 0;
        width: 100%;
    }

    .playlist-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 25px;
        background-color: black;
        color: white;
        padding: 15px; /* Added padding */
        width: 100%; /* Take full width */
        box-sizing: border-box; /* Ensure padding doesn't overflow */
    }

        /* Button style with border-radius */
        .playlist-container button {
            background-color: #1db954; /* Spotify-like green */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 25px; /* Border-radius added */
            cursor: pointer;
            transition: background-color 0.3s ease; /* Transition for hover effect */
        }

            .playlist-container button:hover {
                background-color: #17a247; /* Slightly darker on hover */
            }

    /* Make the home section responsive */
    .home {
        text-align: center;
    }

    .home-logo img {
        width: 50px; /* Set a max width for responsive design */
        height: auto;
    }

    /* Responsive Design */
    @@media screen and (max-width: 768px) {
        .div-left {
            width: 100%;
            padding: 10px; /* Adjust padding */
        }

        .l2 {
            width: 100%;
            padding: 10px;
        }

        .playlist-container {
            width: 90%; /* Adjust width for smaller screens */
            margin: 0 auto;
        }

        .company-logo img {
            width: 50px; /* Make the logo responsive */
            height: auto;
        }

        .home-logo img {
            width: 40px; /* Smaller logo for mobile view */
            height: auto;
        }

        h2 {
            font-size: 1.5em;
        }

        .playlist-container button {
            padding: 8px 15px; /* Adjust padding for smaller buttons */
        }
    }

    @@media screen and (max-width: 480px) {
        .l2 h2 {
            font-size: 1.2em; /* Smaller font size for mobile */
        }

        .playlist-container {
            padding-top: 0px;
        }

            .playlist-container button {
                padding: 6px 12px; /* Further reduced padding for very small screens */
            }
    }

    .language {
        width: auto;
        height: auto;
        display: flex;
        gap: 2px;
        justify-content: center;
        align-items: center;
    }

    .lan-button {
        border-radius: 25px;
        background-color: black;
        color: white;
        display: flex;
        flex-direction: row;
    }

    .lan-image {
        margin: 2px;
        width: 25px;
        height: 25px;
    }

    .lan-logo {
        object-fit: cover;
        border-radius: 50%;
        height: 25px;
    }
    /* Modal styles */
    .modal {
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Dark background */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: black;
        padding: 20px;
        border-radius: 25px;
        text-align: center;
        width: 300px;
    }

    .playlist-input {
        width: 90%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button#closeModalBtn {
            background-color: #d9534f; /* Red button for cancel */
            margin-left: 10px;
        }

    .modal button#createPlaylistBtn {
        background-color: #1db954; /* Green button for creating playlist */
    }

    /* Blur background when modal is open */
    .blurred {
        filter: blur(10px);
    }

</style>

<div class="div-left">
    <div class="l1">
        <div class="company-logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="logo" class="logo" />
            </a>
        </div>
        <div class="home">
            <div class="home-logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/homelogo.png" alt="logo" class="home-logo-image" />
                </a>
            </div>
            <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                <h2 style="margin-top:25px;margin-bottom:0px;color:white;">
                    HOME
                </h2>
            </a>
        </div>
    </div>
    <div class="l2">
        <h2>Your library</h2>
        <hr class="divider">
        <div class="playlist-container">
            <h4 style="margin-top:0px;">Create your playlist</h4>
            <button id="openCreateModal">Create Playlist</button>
        </div>
        <div class="language">
            <button class="lan-button">
                <div class="lan-image">
                    <img src="~/images/language.png" class="lan-logo" />
                </div>
                <h2>English</h2>
            </button>
        </div>
    </div>
</div>
<!-- Modal for Creating Playlist -->
<div id="createPlaylistModal" class="modal" style="display:none;">
    <div class="modal-content">
        <h3>Create Playlist</h3>
        <input type="text" id="playlistName" class="playlist-input" placeholder="Enter playlist name" />
        <button id="createPlaylistBtn">Create</button>
        <button id="closeModalBtn">Cancel</button>
    </div>
</div>
<script>
    // Open modal and blur background
    document.getElementById('openCreateModal').addEventListener('click', function () {
        document.getElementById('createPlaylistModal').style.display = 'flex';
        document.querySelector('.div-left').classList.add('blurred');
    });

    // Close modal
    document.getElementById('closeModalBtn').addEventListener('click', function () {
        document.getElementById('createPlaylistModal').style.display = 'none';
        document.querySelector('.div-left').classList.remove('blurred');
    });

    // Create playlist
    document.getElementById('createPlaylistBtn').addEventListener('click', function () {
        const playlistName = document.getElementById('playlistName').value;

        if (playlistName) {
            // Make an AJAX call to save the playlist in the database
            fetch('/api/Playlists', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name: playlistName })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Redirect to the new playlist page
                        window.location.href = `/Playlists/Index/${data.PlaylistId}`;
                    } else {
                        alert('Error creating playlist');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        } else {
            alert('Please enter a playlist name.');
        }
    });

</script>
