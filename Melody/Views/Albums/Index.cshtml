@model IEnumerable<Melody.Models.Album>

@{
    ViewData["Title"] = "Index";
}
<style>
    .container .div-right .Albums {
        display: flex;
        flex-wrap: wrap;
        background-color: #333;
        border-radius: 25px;
        height: auto;
        width: 100%; /* Full width */
        gap: 7px;
    }

    .Album-list {
        width: 120px;
        border-radius: 25px;
        height: auto;
        background-color: black;
        margin: 7px;
    }

    .Album-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
    }

    .Album-image {
        width: 100px;
        height: 100px;
        border-radius: 25px;
        object-fit: cover; /* Ensure the image fits the circle properly */
        border: 2px solid #5fd068;
    }

    .div-right h3 {
        width: 100px;
        margin: 5px;
        margin-left: 15px;
        padding: 0;
    }
</style>
<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <h3>Albums</h3>
        <div class="Albums">
            @foreach (var album in Model)
            {
                <div class="Album-list">
                    <div class="Album-container">
                        <a href="@Url.Action("Album", "Albums", new { id = album.AlbumId })">
                            <img src="~/images/@album.ImagePath" class="Album-image" alt="@album.Title" />
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
