<style>
    .container .div-right .Albums {
        display: flex;
        flex-wrap: wrap;
        background-color: #333;
        border-radius: 25px;
        height: auto;
        width: auto; /* Full width */
        gap: 7px;
    }

    .Album-list {
        width: 120px;
        border-radius: 25px;
        height: auto;
        background-color: black;
        margin: 7px;
    }

    .Album-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 10px;
        position: relative; /* Ensures hover title is positioned correctly */
    }

    .Album-image {
        width: 100px;
        height: 100px;
        border-radius: 25px;
        object-fit: cover; /* Ensure the image fits the circle properly */
        border: 2px solid #5fd068;
    }

    /* Hidden title that appears on hover */
    .Album-title {
        position: absolute;
        bottom: -30px; /* Position below the album */
        text-align: center;
        font-size: 14px;
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none; /* Prevent interaction with the title */
    }

    /* Show title on hover */
    .Album-container:hover .Album-title {
        opacity: 1;
    }

    .div-right h3 {
        width: 100px;
        margin: 5px;
        margin-left: 15px;
        padding: 0;
    }
</style>

<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <h3>Albums</h3>
        <div class="Albums">
            @foreach (var album in Model)
            {
                <div class="Album-list">
                    <div class="Album-container">
                        <a href="@Url.Action("Album", "Albums", new { id = album.AlbumId })">
                            <img src="~/images/@album.ImagePath" class="Album-image" alt="@album.Title" />
                        </a>
                        <div class="Album-title">@album.Title</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
