@model IEnumerable<Melody.Models.Podcast>
@{
    ViewData["Title"] = "Index";
}
<style>
    .Podcasts{
        width:auto;
        height:auto;
        background-color:#333;
        border-radius:25px;
    }

    .Podcast-list {
        width: 120px;
        border-radius: 25px;
        height: auto;
        background-color: black;
        margin: 7px;
    }

    .Podcast-container {
        display: flex;
        flex-direction:column;
        align-items: center;
        justify-content: center;
        padding: 10px;
    }

    .Podcast-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover; /* Ensure the image fits the circle properly */
        border: 2px solid #5fd068;
    }

    .div-right h3 {
        width: 100px;
        margin: 5px;
        margin-left: 15px;
        padding: 0;
    }
</style>
<div class="container">
    @await Html.PartialAsync("_leftDiv")
    <div class="div-right">
        @await Html.PartialAsync("_rightDiv")
        <div class="Podcasts">
            <h3>Podcasts</h3>
            @foreach (var podcast in Model)
            {
                <div class="Podcast-list">
                    <div class="Podcast-container">
                        <a href="@Url.Action("Index", "Podcast", new { id = podcast.PodcastId })">
                            <img src="~/images/@podcast.ImagePath" class="Podcast-image" alt="@podcast.Name" />
                        </a>
                        <h3>@podcast.Name</h3>
                    </div>
                </div>
            }
        </div>
    </div>
</div>